{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "../../dist/main",
    "lib": [
      "ESNext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "../../src/shared/*"
      ],
      "@vwo/shared-types": [
        "../../packages/shared-types/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}